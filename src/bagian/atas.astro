---
// @ts-ignore
import icon from "../gambar/zen-zen.png";

const tulisan = await Astro.glob("../pages/post/*.mdx");
let kategori = [];

for (let x of tulisan) {
  kategori.push(x.frontmatter.kategori);
}
kategori = [...new Set(kategori)].sort();

// const kategori = ["kesehatan", "kuliner", "olahraga", "teknologi", "travel"];
