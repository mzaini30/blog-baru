---
import icon from "../gambar/zen-zen.png";

const kategori = ["kesehatan", "kuliner", "olahraga", "teknologi", "travel"];
---

<div
  class="p-3 px-27 border-b border-gray-300 flex justify-between items-center sticky top-0"
>
  <a href="/">
    <img src={icon} alt="" class="w-8 -rotate-[8deg]" />
  </a>
  <div>
    {
      kategori.map((x) => (
        <a
          href={`/kategori/${x}`}
          class="text-gray-500 hover:text-gray-800 text-sm mr-8 last:mr-0"
        >
          {x}
        </a>
      ))
    }
  </div>
  <div></div>
</div>
