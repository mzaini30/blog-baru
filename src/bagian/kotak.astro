---
// type bentuk: "landscape" or "portrait"
const { bentuk, judul, link, kategori, gambar } = Astro.props;
---

<div
  class={`rounded-lg shadow-lg shadow-gray-400 p-4 py-5 w-full relative  ${
    bentuk == "landscape" ? "h-70" : "h-100"
  } overflow-hidden`}
>
  <img
    src={gambar}
    alt=""
    class="w-full h-70 absolute -z-1 top-0 left-0 object-cover"
  />
  <a
    href={`/kategori/${kategori}`}
    class="text-white text-sm uppercase"
    style="text-shadow: 2px 2px 0 black">{kategori}</a
  >
  <div
    class="text-2xl text-white font-bold mt-4"
    style="text-shadow: 2px 2px 0 black"
  >
    {judul}
  </div>
  <a
    href={link}
    class="bg-white font-bold px-7 py-2 shadow shadow-black rounded absolute left-4 bottom-5 text-sm"
    >Baca</a
  >
</div>
