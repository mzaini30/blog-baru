---
// type bentuk: "landscape" or "portrait"
const { bentuk, judul, link, kategori, gambar } = Astro.props;
---

<div
  class="rounded-lg shadow-lg shadow-gray-400 bg-no-repeat bg-cover bg-center grayscale hover:grayscale-0 p-4 py-5 w-full relative h-70"
  style={`background-image: url(${gambar})`}
>
  <a href={`/kategori/${kategori}`} class="text-white text-sm uppercase"
    >{kategori}</a
  >
  <div class="text-2xl text-white font-bold mt-4">{judul}</div>
  <a
    href={link}
    class="bg-white font-bold px-7 py-2 shadow shadow-gray-300 rounded absolute left-4 bottom-5 text-sm text-blue-500"
    >Baca</a
  >
</div>
