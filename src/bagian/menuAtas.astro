---
import icon from "../gambar/zen-zen.png";
import IconCari from "../icon/cari.astro";
---

<header>
  <div class="container">
    <img src={icon} alt="icon zen zen" />
    <div>
      {
        Array(8)
          .fill("")
          .map((x, n) => <a href="/">Menu {n + 1}</a>)
      }
    </div>
    <div class="iconCari">
      <IconCari />
    </div>
  </div>
</header>

<style>
  .iconCari {
    user-select: none;
    cursor: pointer;
  }
  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  a {
    --padding: 15px;
    font-size: 15px;
    display: inline-block;
    padding-left: var(--padding);
    padding-right: var(--padding);
  }
  a:hover {
    color: var(--red-500);
  }
  img {
    width: 50px;
    height: auto;
    transform: rotate(-10deg);
  }
  header {
    padding: 10px;
    background-color: white;
    width: 100%;
  }
</style>
